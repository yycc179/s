<%include header%>

    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Mac Address </th>
                    <th>IP Address </th>
                    <th>Mode(Mannual)</th>
                    <th>target</th>
                    <th>step</th>
                    <th>step time</th>
                    <th>Submit</th>
                </tr>
            </thead>

            <tbody>
                <% datas.forEach(function(data, i){ var man = data.manual%>
                    <tr>
                        <th scope="row">
                            <%=i%>
                        </th>
                        <td>
                            <%=data.mac%>
                        </td>
                        <td>
                            <%=data.ip%>
                        </td>
                        <td>
                            <input id="checkbox_<%=i%>" type="checkbox" <%=!data.auto ? "checked": ""%>>
                        </td>
                        <td>
                            <input type="number" class="form-control input_<%=i%>" name="target" min="0" max="30" step="0.5" value=<%=man.target?man.target:3%>
                            <%=data.auto?"disabled":""%>>
                        </td>
                        <td>
                            <input type="number" class="form-control input_<%=i%>" name="step" min="0.25" max="2" step="0.25" value=<%=man.step?man.step:0.25%>
                            <%=data.auto?"disabled":""%>>
                        </td>
                        <td>
                            <input type="number" class="form-control input_<%=i%>" name="step_time" min="1" max="5" step="1" value=<%=man.step_time?man.step_time:5%>
                            <%=data.auto ?"disabled":""%>>
                        </td>
                        <td>
                            <button id="submit_<%=i%>" type="submit" class="btn btn-default glyphicon glyphicon-ok" value="<%=data._id%>"></button>
                        </td>
                    </tr>
                    <% })%>
            </tbody>
        </table>
    </div>

    <script src="//cdn.bootcss.com/babel-standalone/6.23.1/babel.min.js"></script>
    <script src="//oss.maxcdn.com/jquery.form/3.50/jquery.form.min.js"></script>


    <script>
        $('input[type=checkbox]').change(e => {
            var id = e.target.id.split('_')[1];
            $('.input_' + id).attr('disabled', !e.target.checked)
        })

        $('button').click(function (e) {
            var id = e.target.id.split('_')[1];
            var obj = {
                auto: $('#checkbox_' + id).is(':checked') ? false : true
            }
            if (!obj.auto) {
                var manual = {}
                for (one of $('.input_' + id)) {
                    manual[one.name] = one.value;
                }
                obj.manual = manual;
            }

            $.ajax({
                type: "post",
                url: '/web/setting/qos/' + this.value,
                data: JSON.stringify(obj),
                contentType: "application/json",
                dataType: 'json',
                error: () => alert('setting fail!'),
                success: () => alert('ok!')
            });
            console.log(obj)
        })

        $("button").submit(function () {
            $(this).ajaxSubmit({
                url: '/web/setting',
                type: 'post',
                success: () => {
                    $('#info').slideDown();
                    setTimeout(() => $('#info').fadeOut(), 1500)
                },
                error: () => alert('error')
            });
            return false;
        });
    </script>

    <%include footer%>